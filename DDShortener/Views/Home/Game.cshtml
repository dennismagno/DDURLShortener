@{
    ViewBag.Title = "2048 Game";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div style="padding-left:0px;">
        <div class="row">
            <div class="game-board">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="row">
                        @for (int c = 0; c < 4; c++)
                        {
                            <div id="pnl-@(i.ToString() + c.ToString())" class="game-tile tile-0">
                                <h2 id="tile@(i.ToString() + c.ToString())"></h2>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="@Url.Content("~/Scripts/dd2048Script.js")" type="text/javascript"></script>
}