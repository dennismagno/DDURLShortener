<div class="row" style="padding-top: 30px;">
    <div class="col-md-8">
        <div class="jumbotron">
            <p style="font-weight: bold;">Paste your long URL here:</p>
            <div class="input-group add-on">
                @Html.Hidden("get-url", @Url.Action("ShortenURL", "Home"), new { id = "get-url" })
                @Html.TextBox("Url", null, new { @class = "form-control input-sm", @placeholder = "Long URL", @name = "Url" })
                <div class="input-group-btn">
                    <button class="btn btn-primary btn-sm" onclick="createShortUrl();">Shorten URL</button>
                </div>
            </div>
            <br />
            <div>All @Request.Url.Authority  URLs and click analytics are public and can be accessed by anyone.</div>
        </div>
    </div>
    <div class="col-md-4" id="short-url" style="display: none;">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight: bold;">Url Output:</div>
            <div class="panel-body">
                <span id="urlResult" style="font-weight: bold; font-size: 16px;"></span>
                <div id="qrcode"></div>
            </div>
        </div>
    </div>
</div>
<div class="row" id="url-list">
    @{Html.RenderAction("_UrlList", "Home");} 
</div>
@section scripts {
    <script src="@Url.Content("~/Scripts/ddUrlScript.js")" type="text/javascript"></script>
}
